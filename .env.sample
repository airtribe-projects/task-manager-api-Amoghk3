# Server
PORT=3000
NODE_ENV=development

# MongoDB connection string
# Example (local): mongodb://localhost:27017/news_app
# Example (atlas): mongodb+srv://<user>:<password>@cluster0.mongodb.net/news_app?retryWrites=true&w=majority
MONGODB_URI=your_mongodb_connection_string_here

# JWT secret used to sign tokens
JWT_SECRET=your_jwt_secret_here

# Number of bcrypt salt rounds (if you use bcrypt)
SALT_ROUNDS=10

# News API key (used by cacheUpdateService / fetchNews)
NEWS_API_KEY=your_news_api_key_here

